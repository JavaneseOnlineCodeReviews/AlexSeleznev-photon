<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MatchDouble">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapDouble">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TitleFilter" parent="MatchWrap">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/spacing_normal_16</item>
    </style>

    <style name="ItemFilterWrapper" parent="MatchWrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ItemIconFilter">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_small_8</item>
    </style>

    <style name="ItemIconFilterNew">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemIconFilterText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemIconFilterWrapper" parent="ItemIconFilterNew">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ImageItemFilter" parent="WrapDouble">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TitleItemFilter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <dimen name="spacing_small_8">8dp</dimen>
</resources>