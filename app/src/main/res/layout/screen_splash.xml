<?xml version="1.0" encoding="utf-8"?>
<com.applications.whazzup.photomapp.ui.screens.splash.SplashView
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_screen"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/photon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ФОТОН"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/online_gallery_xt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Онлйн-гелерея фуд-фототграфий."
        android:layout_below="@+id/photon_tv"
        android:layout_centerHorizontal="true"
android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Для вдохновения и обучения."
        android:layout_below="@+id/online_gallery_xt"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</com.applications.whazzup.photomapp.ui.screens.splash.SplashView>