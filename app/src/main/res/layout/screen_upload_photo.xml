<?xml version="1.0" encoding="utf-8"?>
<com.applications.whazzup.photomapp.ui.screens.upload_photo.UploadPhotoView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/user_not_auth_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white"
        android:visibility="visible">
        <TextView
            android:gravity="center"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Выберите фотокарточку из галереи и добавьте к вашим альбомам"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/upload_photo"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:text="Выберите фото"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/upload_btn_photo"/>

    </LinearLayout>

</com.applications.whazzup.photomapp.ui.screens.upload_photo.UploadPhotoView>